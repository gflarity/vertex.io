section#apps

  h1 Your Apps

  section#apps_new
    form(name='input', action='/create', method='get')
      input(type='hidden', name='command', value='generate')
      input(type='text', name='args', placeholder='enter app name')
      input(type='submit', value='create')

  section#apps_index
    ul(style='list-style-type: none;')
      - for(var i=0; i<apps.length; i++)
        li(style="list-style-type: none;text-align:left;")
          .icon 
            img(src="http://#{host}:5984/#{apps[i]}/_design/app/apple-touch-icon.png", width="34px", height="34px")
          .name #{apps[i]}
      
          .side
            a.edit(href="/apps/#{apps[i]}/edit") edit
            a.view(href="/apps/#{apps[i]}") view